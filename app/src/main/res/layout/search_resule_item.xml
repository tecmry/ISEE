<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_bg">

    <ImageView
        android:id="@+id/result_item_image_one"
        android:layout_width="110dp"
        android:layout_height="110dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result_item_image_two"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/text_bg_two"
        app:layout_constraintBottom_toBottomOf="@id/result_item_image_one"
        app:layout_constraintStart_toStartOf="@id/result_item_image_one"/>

    <TextView
        android:id="@+id/result_item_text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/result_item_image_one"
        app:layout_constraintEnd_toEndOf="@id/result_item_image_one"
        app:layout_constraintBottom_toBottomOf="@+id/result_item_image_one"
        android:maxWidth="100dp"
        android:gravity="center"
        android:text="@string/昵称"
        android:textSize="13sp"
        android:textColor="@color/textColor_Black"/>

    <ImageView
        android:id="@+id/result_item_image_two"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_item_image_one"
        app:layout_constraintEnd_toStartOf="@id/result_item_image_three"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/text_bg_two"
        app:layout_constraintBottom_toBottomOf="@id/result_item_image_two"
        app:layout_constraintStart_toStartOf="@id/result_item_image_two"/>

    <TextView
        android:id="@+id/result_item_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/result_item_image_two"
        app:layout_constraintEnd_toEndOf="@id/result_item_image_two"
        app:layout_constraintBottom_toBottomOf="@+id/result_item_image_two"
        android:maxWidth="100dp"
        android:gravity="center"
        android:text="@string/昵称"
        android:textSize="13sp"
        android:textColor="@color/textColor_Black"/>

    <ImageView
        android:id="@+id/result_item_image_three"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_item_image_two"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/text_bg_two"
        app:layout_constraintBottom_toBottomOf="@id/result_item_image_three"
        app:layout_constraintStart_toStartOf="@id/result_item_image_three"/>

    <TextView
        android:id="@+id/result_item_text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/result_item_image_three"
        app:layout_constraintEnd_toEndOf="@id/result_item_image_three"
        app:layout_constraintBottom_toBottomOf="@+id/result_item_image_three"
        android:maxWidth="100dp"
        android:gravity="center"
        android:text="@string/昵称"
        android:textSize="13sp"
        android:textColor="@color/textColor_Black"/>

</android.support.constraint.ConstraintLayout>