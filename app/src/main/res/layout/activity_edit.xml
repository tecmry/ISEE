<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg">

        <FrameLayout
            android:id="@+id/activity_setting_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColor_White"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_setting_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/textColor_White">
            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/activity_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/编辑个人信息"
                android:textSize="20sp"
                android:textColor="@color/new_theme_color"/>

            <ImageView
                android:id="@+id/activity_setting_back"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:src="@drawable/back"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/activity_setting_one"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_frame"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_one"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_one"
            android:text="头像"
            android:textColor="@color/textColor_Black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_setting_one_more"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_one"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_one"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_circle_image"
            android:layout_width="65dp"
            android:layout_height="65dp"

            app:layout_constraintEnd_toStartOf="@id/activity_setting_one_more"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_one"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_one"/>

        <ImageView
            android:id="@+id/activity_setting_two"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_one"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_two"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_two"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_two"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_two"
            android:text="用户名"
            android:textColor="@color/textColor_Black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_setting_three"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_two"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_three"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_three"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_three"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_three"
            android:text="地区"
            android:textColor="@color/textColor_Black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_setting_four"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_three"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_four"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_four"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_four"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_four"
            android:text="年龄"
            android:textColor="@color/textColor_Black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_setting_five"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_four"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/more"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_five"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_five"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_five"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_five"
            android:text="邮箱"
            android:textColor="@color/textColor_Black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_setting_six"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_five"/>

        <TextView
            android:id="@+id/activity_setting_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_six"
            android:text="@string/我的标签"
            android:textColor="@color/new_theme_color"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/new_theme_color"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_label"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_label"
            app:layout_constraintEnd_toStartOf="@id/activity_setting_label"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/new_theme_color"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_label"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_label"
            app:layout_constraintStart_toEndOf="@id/activity_setting_label"/>

        <Button
            android:id="@+id/activity_setting_exit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_six"
            android:text="@string/exit"
            android:textSize="16sp"
            android:textColor="@color/textColor_White"
            android:background="@color/new_theme_color" />

    </android.support.constraint.ConstraintLayout>


</layout>


