<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fragment_three_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg">

        <ImageView
            android:id="@+id/fragment_three_choose"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/toolbar_bg"/>

        <Spinner
            android:id="@+id/fragment_three_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_three_choose"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_three_choose">
        </Spinner>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_community_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_one_choose">
        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</layout>