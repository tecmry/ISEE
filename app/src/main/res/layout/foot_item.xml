<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/foot_item_parent"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_bg">

    <TextView
        android:id="@+id/foot_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/点击返回顶层"
        android:textSize="15sp"
        android:textColor="@color/textColor_Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="2dp"
        android:background="@color/textColor_Gray"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/foot_item_text"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="2dp"
        android:background="@color/textColor_Gray"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/foot_item_text"/>

</android.support.constraint.ConstraintLayout>