<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true"
        app:srlEnableLoadmore="false"
        app:srlDragRate="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textColor_White"
        tools:context="com.example.mao.beautylife.activity.SearchActivity">

        <EditText
            android:id="@+id/activity_search_search"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:drawableStart="@drawable/search_left"
            android:background="@drawable/search_bg_new"
            android:transitionName="shareAnim"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="@string/search_edit"
            android:textCursorDrawable="@null"
            android:textColor="@color/textColor_Black"
            android:textColorHint="@color/textColor_Gray"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_clear"

            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/activity_search_search"
            app:layout_constraintBottom_toBottomOf="@+id/activity_search_search"
            app:layout_constraintEnd_toEndOf="@id/activity_search_search"/>

        <ImageView
            android:id="@+id/activity_search_divider_one"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/common_bg"
            app:layout_constraintTop_toBottomOf="@+id/activity_search_search"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/activity_search_hot_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/热门搜索"
            android:textSize="15sp"
            android:textColor="@color/new_theme_color"
            app:layout_constraintStart_toStartOf="@id/activity_search_search"
            app:layout_constraintTop_toBottomOf="@id/activity_search_divider_one"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/activity_search_hot_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/hot_text_bg"
            app:layout_constraintStart_toStartOf="@id/activity_search_hot_search"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_search_hot_search"
            android:text="@string/热门搜索"
            android:textColor="@color/textColor_Black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_search_hot_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/hot_text_bg"
            app:layout_constraintTop_toTopOf="@+id/activity_search_hot_text_1"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/activity_search_hot_text_1"
            android:text="@string/热门搜索"
            android:textColor="@color/textColor_Black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_search_hot_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/hot_text_bg"
            app:layout_constraintTop_toTopOf="@+id/activity_search_hot_text_1"
            app:layout_constraintStart_toEndOf="@id/activity_search_hot_text_2"
            android:layout_marginStart="10dp"
            android:text="@string/热门搜索"
            android:textColor="@color/textColor_Black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_search_hot_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/hot_text_bg"
            app:layout_constraintStart_toStartOf="@id/activity_search_hot_search"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/activity_search_hot_text_1"
            android:text="@string/热门搜索"
            android:textColor="@color/textColor_Black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_search_hot_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/hot_text_bg"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/activity_search_hot_text_5"
            app:layout_constraintTop_toTopOf="@+id/activity_search_hot_text_5"
            android:text="@string/热门搜索"
            android:textColor="@color/textColor_Black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_search_hot_text_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/hot_text_bg"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/activity_search_hot_text_6"
            app:layout_constraintTop_toTopOf="@+id/activity_search_hot_text_5"
            android:text="@string/热门搜索"
            android:textColor="@color/textColor_Black"
            android:textSize="16sp"/>
        
        <ImageView
            android:id="@+id/activity_search_divider_two"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/common_bg"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_search_hot_text_7"/>

        <TextView
            android:id="@+id/activity_search_history_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/搜索历史"
            android:textSize="15sp"
            android:textColor="@color/new_theme_color"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/activity_search_search"
            app:layout_constraintTop_toBottomOf="@id/activity_search_divider_two" />

        <ImageView
            android:id="@+id/activity_search_image_garbage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/garbage_image"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_search_history_search"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_search_history_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_search_history_search">
        </android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</layout>
