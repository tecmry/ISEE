<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="190dp">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/Iv_RecommendvideoItemLeft"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="6dp"
        android:src="#FEE296" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:maxLines="2"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题"
        android:textColor="@color/textColor_Black"
        android:id="@+id/Tv_RecommendvideoItemTitleLeft"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频发布者"
            android:maxLines="1"
            android:textColor="#878787"
            android:layout_marginLeft="6dp"
            android:id="@+id/Tv_RecommendvideoItemAuthorLeft"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:textColor="#878787"
            android:text="2018.10"
            android:layout_marginRight="6dp"
            android:id="@+id/Tv_RecommendvideoItemTimeLeft"
            />
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/Iv_RecommendvideoItemRight"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:src="#FEE296" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:maxLines="2"
            android:text="标题标题标题标题标题标题标题标题标题标题标题标题"
            android:textColor="@color/textColor_Black"
            android:id="@+id/Tv_RecommendvideoItemTitleRight"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频发布者"
                android:maxLines="1"
                android:textColor="#878787"
                android:layout_marginLeft="6dp"
                android:id="@+id/Tv_RecommendvideoItemAuthorRight"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textColor="#878787"
                android:text="2018.10"
                android:layout_marginRight="6dp"
                android:id="@+id/Tv_RecommendvideoItemTimeRight"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
