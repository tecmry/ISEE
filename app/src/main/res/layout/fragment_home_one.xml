<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColor_White">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_one_image_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/common_bg"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/home_one_text_one"
            app:layout_constraintEnd_toEndOf="@id/home_one_text_one"/>

        <TextView
            android:id="@+id/home_one_text_one"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/home_one_image_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/home_one_text_two"
            android:text="排行"
            android:textColor="@color/textColor_Gray"/>

        <TextView
            android:id="@+id/home_one_text_two"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@+id/home_one_text_one"
            app:layout_constraintStart_toEndOf="@id/home_one_text_one"
            app:layout_constraintEnd_toStartOf="@id/home_one_text_three"
            android:text="新闻"
            android:textColor="@color/textColor_Gray"/>

        <TextView
            android:id="@+id/home_one_text_three"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@+id/home_one_text_one"
            app:layout_constraintStart_toEndOf="@id/home_one_text_two"
            app:layout_constraintEnd_toStartOf="@id/home_one_text_four"
            android:text="签到"
            android:textColor="@color/textColor_Gray"/>

        <TextView
            android:id="@+id/home_one_text_four"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@+id/home_one_text_one"
            app:layout_constraintStart_toEndOf="@id/home_one_text_three"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="签到"
            android:textColor="@color/textColor_Gray"/>

        <ImageView
            android:id="@+id/home_one_divide_one"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/common_bg"
            app:layout_constraintTop_toBottomOf="@id/home_one_text_one"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_circle_image_one"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@+id/home_one_divide_one"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/common_bg"/>

        <TextView
            android:id="@+id/list_official_name_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/list_circle_image_one"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/list_circle_image_one"
            android:text="@string/标题"
            android:textSize="14sp"
            android:textColor="@color/textColor_Black"/>

        <TextView
            android:id="@+id/list_official_content_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/list_official_name_one"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/list_official_name_one"
            android:text="@string/标题"
            android:textSize="13sp"
            android:textColor="@color/textColor_Gray"/>

        <TextView
            android:id="@+id/list_content_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/list_circle_image_one"
            app:layout_constraintStart_toStartOf="@id/list_circle_image_one"
            android:text="@string/标题"
            android:textSize="16sp"
            android:textColor="@color/textColor_Black" />

        <TextView
            android:id="@+id/list_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/list_like"
            app:layout_constraintBottom_toBottomOf="@id/list_like"
            app:layout_constraintStart_toStartOf="@id/list_content_one"
            android:text="@string/day"
            android:textColor="@color/textColor_Gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/list_day"
            app:layout_constraintTop_toTopOf="@id/list_like"
            app:layout_constraintBottom_toBottomOf="@id/list_like"
            android:text="@string/time"
            android:textColor="@color/textColor_Gray"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/list_focus_btn"
            android:layout_width="48dp"
            android:layout_height="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/list_image"
            app:layout_constraintTop_toBottomOf="@+id/home_one_divide_one"
            android:background="@drawable/focus_btn_bg"
            android:text="@string/关注plus"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="140dp"
            android:layout_height="95dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/list_focus_btn"
            android:background="@drawable/common_bg"/>

        <TextView
            android:id="@+id/list_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/list_image"
            app:layout_constraintStart_toStartOf="@id/list_image"
            android:text="@string/点赞"
            android:textColor="@color/textColor_Gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/list_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/list_like"
            app:layout_constraintTop_toTopOf="@id/list_like"
            app:layout_constraintBottom_toBottomOf="@id/list_like"
            android:text="@string/num"
            android:textColor="@color/textColor_Gray"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/home_one_divide_two"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/common_bg"
            app:layout_constraintTop_toBottomOf="@id/list_like"/>

    </android.support.constraint.ConstraintLayout>

    </ScrollView>

</layout>