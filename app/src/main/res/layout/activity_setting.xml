<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bg">

        <FrameLayout
            android:id="@+id/activity_setting_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_bg"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_setting_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/toolbar_bg">
            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/activity_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/编辑个人信息"
                android:textSize="20sp"
                android:textColor="@color/textColor_White"/>

            <ImageView
                android:id="@+id/activity_setting_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/activity_setting_item_one"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/toolbar_bg"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_setting_frame"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_setting_item_one"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_item_one"
            android:text="@string/基本信息"
            android:textSize="16sp"
            android:textColor="@color/textColor_Black"/>

        <ImageView
            android:id="@+id/activity_setting_item_two"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/activity_setting_item_one"/>

        <TextView
            android:id="@+id/activity_setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_item_two"
            app:layout_constraintBottom_toTopOf="@+id/activity_setting_sex"
            android:text="@string/昵称"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_maxCharacters="12"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_name"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_name_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_name"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_name" />

        <TextView
            android:id="@+id/activity_setting_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_setting_name"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_name"
            app:layout_constraintBottom_toTopOf="@+id/activity_setting_info"
            android:text="@string/性别"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_sex"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_sex"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_sex_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_sex"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_sex"
            />

        <TextView
            android:id="@+id/activity_setting_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_setting_name"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_sex"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_item_two"
            android:text="@string/个性签名"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_info"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_info"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_info_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_info"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_info" />

        <ImageView
            android:id="@+id/activity_setting_item_three"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/toolbar_bg"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_setting_item_two"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_setting_item_three"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_item_three"
            android:text="@string/我的标签"
            android:textSize="16sp"
            android:textColor="@color/textColor_Black"/>

        <ImageView
            android:id="@+id/activity_setting_item_four"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_item_three"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/添加标签"
            android:textColor="#F7E0DA"
            android:layout_marginBottom="10dp"
            android:background="@drawable/setting_btn_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_item_four"/>

        <ImageView
            android:id="@+id/activity_setting_item_five"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/toolbar_bg"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/activity_setting_item_four"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_setting_item_five"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_item_five"
            android:text="@string/更多信息"
            android:textSize="16sp"
            android:textColor="@color/textColor_Black"/>

        <ImageView
            android:id="@+id/activity_setting_item_six"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/textColor_White"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/activity_setting_item_five"/>

        <TextView
            android:id="@+id/activity_setting_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_setting_name"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_item_six"
            app:layout_constraintBottom_toTopOf="@+id/activity_setting_birthday"
            android:text="@string/local"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_local"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_local"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_local_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_local"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_local" />

        <TextView
            android:id="@+id/activity_setting_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_setting_local"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_local"
            app:layout_constraintBottom_toTopOf="@+id/activity_setting_email"
            android:text="@string/birthday"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_birthday"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_birthday"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_birthday_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_birthday"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_birthday" />


        <TextView
            android:id="@+id/activity_setting_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_setting_name"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_birthday"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_qq"
            android:text="@string/email"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_email"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_email"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_email_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_email"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_email" />

        <TextView
            android:id="@+id/activity_setting_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_setting_name"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_email"
            app:layout_constraintBottom_toBottomOf="@+id/activity_setting_item_six"
            android:text="@string/qq"
            android:textSize="14sp"
            android:textColor="@color/textColor_Gray"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_setting_edit_qq"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:inputType="numberSigned"
            android:textSize="14sp"
            app:met_clearButton="true"
            app:met_singleLineEllipsis="true"
            android:textCursorDrawable="@null"
            app:met_baseColor="@color/textColor_Gray"
            app:met_primaryColor="@color/textColor_Gray"
            app:layout_constraintStart_toEndOf="@id/activity_setting_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/activity_setting_qq"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_setting_edit_qq_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/write_unselected"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/activity_setting_edit_qq"
            app:layout_constraintTop_toTopOf="@+id/activity_setting_qq" />

        <Button
            android:id="@+id/activity_setting_exit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:text="@string/exit"
            android:textSize="16sp"
            android:textColor="@color/textColor_Red"
            android:background="@color/textColor_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_setting_item_six" />

    </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>


