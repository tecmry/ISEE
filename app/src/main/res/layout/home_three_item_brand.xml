<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="85dp"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_brand_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/default_image" />

    <TextView
        android:id="@+id/item_brand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/品牌"
        android:textColor="@color/textColor_Gray"
        app:layout_constraintStart_toStartOf="@id/item_brand_image"
        app:layout_constraintEnd_toEndOf="@id/item_brand_image"
        app:layout_constraintTop_toBottomOf="@id/item_brand_image"/>

</android.support.constraint.ConstraintLayout>